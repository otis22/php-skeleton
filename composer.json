{
    "name": "otis22/php-skelleton",
    "description": "Php skelleton for write high quality code",
    "license": "MIT",
    "authors": [
        {
            "name": "otis",
            "email": "pro100print@yahoo.com"
        }
    ],
    "require-dev": {
        "phpunit/phpunit": "^9.1",
        "squizlabs/php_codesniffer": "3.*",
        "phpstan/phpstan": "^0.12.19",
        "michaelmoussa/php-coverage-checker": "^1.1",
        "sensiolabs/security-checker": "^6.0",
        "wapmorgan/php-code-fixer": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Otis22\\PhpSkelleton\\": "src",
            "packagetest\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Otis22\\PhpSkelleton\\Tests\\": "tests",
            "packagetest\\Tests\\": "tests"
        }
    },
    "scripts": {
        "unit": "vendor/bin/phpunit",
        "coverage": "vendor/bin/php-coverage-checker build/logs/clover.xml 100",
        "static-analyze": "vendor/bin/phpstan analyse --level=max src tests &&  vendor/bin/phpdd tests src",
        "style": "vendor/bin/phpcs --ignore-annotations --standard=PSR12 src tests",
        "security": "./local-php-security-checker --path=./composer.lock",
        "check-all": "composer validate && composer security && composer style && composer static-analyze && composer unit"
    }
}
